# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_DB=etl_tool

# Email Configuration for Alerts
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password

# Slack Configuration for Alerts
# Get webhook URL from Slack: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Alert System Configuration
# How often to check alert conditions (in minutes)
ALERT_CHECK_INTERVAL=1

# Default notification channel (email, slack, both, none)
DEFAULT_ALERT_CHANNEL=email

# Alert retention period (in days)
ALERT_RETENTION_DAYS=90

# System health monitoring
# Check database connection health
MONITOR_DB_HEALTH=True

# Check disk space (alert if available space < threshold GB)
MONITOR_DISK_SPACE=True
DISK_SPACE_THRESHOLD_GB=5

# Check memory usage (alert if usage > threshold %)
MONITOR_MEMORY=True
MEMORY_THRESHOLD_PERCENT=85

# Check CPU usage (alert if usage > threshold %)
MONITOR_CPU=True
CPU_THRESHOLD_PERCENT=90

# Encryption Key (for credentials)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Frontend Configuration
VITE_API_URL=http://localhost:8000
